@model RoSAT.Models.Event

@{
    ViewBag.Title = "EditEvent";
}
<div class="container">

    <div class="row" style="position: relative;right: 25%; left: 25%;">
        <div class="col-md-6  form-box reg-form1" >


            @using (Html.BeginForm("EditEvent", "Events", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-top">
                    <div class="form-top-left">
                        <h3>Step 5 / 8</h3>
                        <p>Event Information:</p>
                    </div>

                </div>
                <div class="form-bottom">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, "Event Name*", htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Category, "Category*", htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.Category, ViewBag.EventType as SelectList, "Pick one", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ELevel, "Event Level*", htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.ELevel, ViewBag.EventLevel as SelectList, "Pick one", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ELevel, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CertificateId, "Certificate ID", htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CertificateId, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CertificateId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CertificateIssuingAuthority, "Certificate Issuing Authority", htmlAttributes: new { @class = "control -label col-md-5" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CertificateIssuingAuthority, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CertificateIssuingAuthority, "", new { @class = "text-danger" })
                            <p>Enter the name of Institution/ Organization.</p>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CertificateEarnedDate, "Certificate Earned Date", htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CertificateEarnedDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CertificateEarnedDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CertificatePhoto, "Certificate Photo", htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-10">
                            <input type="file" name="photoUpload" class="form-control" />
                            @Html.ValidationMessageFor(model => model.CertificatePhoto, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Position, "Position*", htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                            <p>Eg: 1, 2, 3. For participation, enter 0.</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <input type="submit" id="btn2" class="btn btn-next btn-info" value="Save" />
                    </div>
                </div>

            }
        </div>


        <div class="col-md-6">
        </div>
    </div>

    <div class="row">
    </div>
</div>

