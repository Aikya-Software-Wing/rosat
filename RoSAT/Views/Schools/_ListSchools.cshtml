@model IEnumerable<RoSAT.Models.School>


@if (Model.Count() > 0)
{
    <div class="form-box col-md-6">
        <div class="container tableIt wrapper">
            <table align='center' id="data_table">
                <tr>
                    <th>
                        Type
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MediumInstruction)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PercentageMarks)
                    </th>
                    <th>
                        Board
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SchoolType.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MediumInstruction)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PercentageMarks)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BoardType.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditSchool", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "DeleteSchool", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
}